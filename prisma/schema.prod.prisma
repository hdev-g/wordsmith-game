generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PROD_DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  email         String   @unique
  name          String?
  companyName   String?
  role          String?
  logicScore    Int      @default(5)
  charismaScore Int      @default(5)
  riskScore     Int      @default(5)
  scores        Score[]
}

model Score {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  userId        String
  scenarioId    Int
  score         Int
  outcome       String
  logicScore    Int
  charismaScore Int
  riskScore     Int
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
} 